{
    "compilerOptions": {
      "declaration": true,
      "module": "ES2015",
      "moduleResolution": "Node",
      "noImplicitReturns": false,
      "noUnusedLocals": false,
      "noImplicitAny": false,
      "resolveJsonModule": true,
      "outDir": "lib/esm",
      "sourceMap": true,
      "esModuleInterop": true,
      "strict": true,
      "target": "es2015",
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types"]
    },
    "compileOnSave": true,
  }