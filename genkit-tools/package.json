{
  "name": "genkit-cli",
  "version": "0.0.1",
  "description": "CLI for interacting with the Google GenKit AI framework",
  "bin": {
    "genkit": "dist/bin/genkit.js"
  },
  "workspaces": [
    "./**"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "(npm run build:common) && (npm run build:cli) && (npm run build:ui) && (npm run copy-ui-build) && (npm run build:plugins)",
    "build:cli": "tsc",
    "build:ui": "cd ui && npm run build",
    "build:common": "cd common && npm run build",
    "build:plugins": "cd plugins/google && npm run build",
    "copy-ui-build": "rm -rf dist/client && cd ui && cp -r dist ../dist/client",
    "lint": "eslint --config .eslintrc.js --ext .ts,.js .",
    "lint:fix": "npm run lint -- --fix --quiet",
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall": "(npm install --ignore-scripts -C ./ui); (npm install --ignore-scripts -C ./common)",
    "postinstall": "npm run build:common"
  },
  "author": "Firebase (https://firebase.google.com)",
  "license": "MIT",
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^1.5.3",
    "@types/cli-color": "^2.0.6",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^46.9.1",
    "eslint-plugin-prettier": "^5.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^6.3.1",
    "@trpc/server": "10.45.0",
    "axios": "^1.6.7",
    "chokidar": "^3.5.3",
    "colorette": "^2.0.20",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
