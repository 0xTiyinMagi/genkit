{
  "name": "genkit-cli",
  "version": "0.0.1",
  "description": "CLI for interacting with the Google GenKit AI framework",
  "bin": {
    "genkit": "dist/bin/genkit.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "(npm run build:cli) && (npm run build:ui) && (npm run copy-ui-build)",
    "build:cli": "tsc",
    "build:ui": "cd ui && npm run build",
    "copy-ui-build": "rm -r dist/client && cd ui && cp -r dist ../dist/client",
    "lint": "eslint --config .eslintrc.js --ext .ts,.js .",
    "lint:fix": "npm run lint -- --fix --quiet",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Firebase (https://firebase.google.com)",
  "license": "MIT",
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^1.5.3",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^46.9.1",
    "eslint-plugin-prettier": "^5.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "winston": "^3.11.0"
  }
}
